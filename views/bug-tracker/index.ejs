            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">BugBot</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/bugs">Bugs</a></li>
        </div>
        <!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <div class="row featurette">
        <div class="col-md-12">
          <br/>
          <h6 class="title">
            All Bugs
          </h6>
          <table id="all-bugs" class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Urgency</th>
                <th>ID</th>
                <th>Date Opened</th>
              </tr>
            </thead>
            <tbody>
              <% bugs.forEach(function(bug) {%>
                <tr>
                  <td><a href="<%= bug.url %>"><%= bug.title %></a></td>
                  <td class="urgency-<%= bug.urgency %>"><%= bug.urgency.toUpperCase() %></a></td>
                  <td><a href="<%= bug.url %>"><%= bug.id %></a></td>
                  <td class="comment-date"><%= formatDate(bug.dateOpened) %></td>
                </tr>
              <%});%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- /container -->
    
    <br/>

    <%- include ../footer %>
    
    <!-- Bootstrap core JavaScript
      ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
